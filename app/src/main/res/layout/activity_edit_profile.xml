<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cdcdcd"
    android:orientation="vertical"
    android:weightSum="20"
    tools:context=".MainActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <!--Title-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="Nature Guide\n עריכת פרופיל"
        android:textSize="20dp" />
    <!--app image-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="#cdcdcd"
        android:src="@drawable/naturemainphoto" />
    <!--body-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="horizontal"
        android:weightSum="10">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <!--fields container-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:orientation="vertical"
            android:weightSum="14">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="*לא ניתן לשנות את האימייל לאחר ההרשמה" />

            <EditText
                android:id="@+id/EditUserEmail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:drawableEnd="@drawable/mail_icon"
                android:drawablePadding="10dp"
                android:gravity="right"
                android:hint="הכנס אימייל..."
                android:inputType="none"
                android:textColor="#000000" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5" />

            <EditText
                android:id="@+id/EditUserFirst"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:drawableEnd="@drawable/user_icon"
                android:drawablePadding="10dp"
                android:gravity="right"
                android:hint="הכנס שם פרטי..."
                android:inputType="text"
                android:textColor="#000000" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5" />

            <EditText
                android:id="@+id/EditUserLastname"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:drawableEnd="@drawable/user_icon"
                android:drawablePadding="10dp"
                android:gravity="right"
                android:hint="הכנס שם משפחה..."
                android:inputType="text"
                android:textColor="#000000" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5" />

            <EditText
                android:id="@+id/EditUserPassword"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:drawableEnd="@drawable/pass_icon"
                android:drawablePadding="10dp"
                android:gravity="right"
                android:hint="..הכנס סיסמא"
                android:inputType="text"
                android:textColor="#000000" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5" />

            <Button
                android:id="@+id/EditBtnUpdate"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1.5"

                android:background="#999"
                android:text="עדכן פרטים" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>